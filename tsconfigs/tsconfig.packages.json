{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "paths": {
      "@metamask/*": ["packages/*/src"]
    },
    "strict": true,
    "target": "ES2020",
    "jsx": "react-jsx", // Added to support JSX syntax
    "allowSyntheticDefaultImports": true, // For compatibility with React imports
    "skipLibCheck": true // Skips type checking of declaration files
  }
}
